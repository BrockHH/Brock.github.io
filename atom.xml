    <title>B1008 数组元素循环右移问题 (20分)</title>
    <link href="http://yoursite.com/2020/07/31/B1008%20%E6%95%B0%E7%BB%84%E5%85%83%E7%B4%A0%E5%BE%AA%E7%8E%AF%E5%8F%B3%E7%A7%BB%E9%97%AE%E9%A2%98%20(20%E5%88%86)/"/>
    <id>http://yoursite.com/2020/07/31/B1008%20%E6%95%B0%E7%BB%84%E5%85%83%E7%B4%A0%E5%BE%AA%E7%8E%AF%E5%8F%B3%E7%A7%BB%E9%97%AE%E9%A2%98%20(20%E5%88%86)/</id>
    <published>2020-07-31T13:43:01.000Z</published>
